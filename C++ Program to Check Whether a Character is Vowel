#include <iostream>
using namespace std;
char inpc;
int main() {
    char ch;
    cout << "enter a letter:" ;
    cin >> ch;
    if (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'||
        ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U') {
        cout << "Vowel";
        }
    else {
        cout << "Consonant";
    }
    return 0;
}

/*Output:-
enter a letter:P
